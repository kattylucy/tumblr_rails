%div{class: "app-wrapper"}
- @posts.each do |post|
    %div{class:"post-card"}
        %h2= link_to post.title, post


%div{class:"footer"}
    %p= link_to "Create new post", new_post_path


- if user_signed_in?
    %div
        %p= link_to 'Sign out', destroy_user_session_path, method: :delete
- else 
    %div
        %p= link_to 'Sign in', new_user_session_path

