= form_for @post do |f|
    - if @post.errors.any?
        %div{id:"errors"}
            %ul
                - @post.errors.full_messages.each do |error|
                    %li= error
                    

    %p
        = f.label :title 
        %br/
        = f.text_field :title

    %p
        = f.label :body 
        %br/
        = f.text_area :body
    
    %p
        = f.submit
